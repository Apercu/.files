!!--!!--!!--!!--!!--!!
!!   ~/.Xdefaults   !!
!!--!!--!!--!!--!!--!!

!! Global font
URxvt.intensityStyles:	false
URxvt*font:		xft:Monospace:pixelsize=14
URxvt*boldFont:		xft:Monospace:pixelsize=14

!!-! XFT settings !-!!
Xft*dpi:		96
Xft*antialias:		true
Xft*hinting:		full


!! General settings
urxvt*allow_bold:	false
urxvt*termName:		rxvt-256color
urxvt*scrollBar:	false
urxvt*matcher.button:	1
URxvt*geometry:		80x40
URxvt.perl-ext-common:	default,url-select,clipboard
URxvt.keysym.M-u:	perl:url-select:select_next
URxvt.urlLauncher:	chromium
URxvt.underlineURLs:	true
URxvt.saveLines:	1000
URxvt.scrollBar:	False

!! Colors
*background:  		[80]#191919
!URxvt*background: 	[80]#151515
URxvt*foreground:	#999

URxvt*fading:		0
URxvt*fadeColor:	#202020
URxvt.depth:		32
urxvt*transparent:	True
URxvt*.transparent:	True
!Black
URxvt*color0:		#101010
URxvt*color8:		#505050
!Red
URxvt*color1:		#a2363a
URxvt*color9:		#ff5b62
!!Green
